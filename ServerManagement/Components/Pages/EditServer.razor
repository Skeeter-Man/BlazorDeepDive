@page   "/editserver/{id:int}"


<div class="row">
    <h3>
        Edit Server @Id
    </h3>
</div>

<div class="row">
    @if (server is null)
    {
        <p>Loading server ...</p>
    }
    else
    {
        <p>
            @server.Id 
        </p>
        <p>
            @server.Name
        </p>
        <p>
            @server.City 
        </p>
        <p>
            IsOnline:@server.IsOnline 
        </p>
    }

</div>

<br />
<div class="row">
    <a href="/servers" class="btn btn-outline-warning">Back</a>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    public Server server { get; set; } = new();

    protected override void OnParametersSet()
    {
        var result = ServersRepository.GetServerById(Id);
        if (result is not null)
        {
            server = result;
        }
    }
}
